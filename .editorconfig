# EditorConfig

# This is the top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Makefile
# Use tab indentation
[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

# JSON files
[*.{json}]
indent_style = space
indent_size = 2
tab_width = 2

# Markdown
[*.{md}]
trim_trailing_whitespace = false
